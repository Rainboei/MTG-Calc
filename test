mana = 1
class card:
  def __init__(self, name, cost):
    self.name = name
    self.cost = cost
  def __str__(self):
    if self.cost<=mana:
      self.canplay = "Can play"
    else:
      self.canplay = "Cannot play"
    return f"{self.name}({self.cost}), {self.canplay}"
  def stats(self):
    print(self)
